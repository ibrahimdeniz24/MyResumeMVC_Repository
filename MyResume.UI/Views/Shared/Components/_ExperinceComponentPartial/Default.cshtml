@using MyResume.UI.Areas.Admin.Models.AdminVMs.AdminResumeVMs;
@model List<AdminResumeListVM>
<section id="resume" class="resume section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>@ViewBag.resumeTitle</h2>
        <p>@ViewBag.resumeDesciprtion</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row">

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                @await Component.InvokeAsync("_SummaryCompanentPartial");
                @await Component.InvokeAsync("_EducationComponentPartial");


            </div>

            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                <h3 class="resume-title">Professional Experience</h3>
                <div class="resume-item">
                    @foreach (var item in Model)
                    {

                        <h4>@item.Title</h4>
                        <h5>@item.Date - Present</h5>
                        <p><em>Experion, New York, NY </em></p>
                        <ul>
                            <li>@item.Desciption</li>
                        </ul>
                    }
                </div><!-- Edn Resume Item -->
            </div>

        </div>

    </div>

</section>