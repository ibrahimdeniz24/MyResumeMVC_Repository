@model MyResume.UI.Areas.Admin.Models.AdminVMs.AdminResumeVMs.AdminResumeCreateVM

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>


    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Create</h5>
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-3">
                        <label asp-for="Head" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Head" class="form-control" />
                            <span asp-validation-for="Head" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="date" asp-for="Date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Desciption" class="col-sm-2 col-form-label"></label>

                        <!-- Gizli input alanı, ASP.NET Core modeliyle bağlanıyor -->
                        <input type="hidden" asp-for="Desciption" id="Content" /> 

                        <div class="col-sm-10">
                            <!-- Quill editörü için div -->
                            <div class="quill-editor-default">
                            </div>
                        </div>

                        <!-- Validasyon mesajı -->
                        <span asp-validation-for="Desciption" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">

                    </div>
                    <div class="row mb-3">

                    </div>
                    <div class="row mb-3">

                    </div>
                    <div class="row mb-3">
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Submit Button</label>
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit Form</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>


    <!-- Quill script ve init -->
    <script>
        var quill = new Quill('.quill-editor-default', {
            theme: 'snow'
        });

        // Form submit olayında Quill içeriğini gizli input'a aktar
        document.querySelector('form').onsubmit = function () {
            var content = document.querySelector('#Content');
            content.value = quill.root.innerHTML; // Quill içeriği gizli input'a aktarılır
        };
    </script>

</body>
</html>
